<%= form_for @recipe do |f| %>
    <div class="form-group">
      <label for="recipe[name]">Name</label>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <label for="recipe[intro]">Introduction</label>
      <%= f.text_area :intro, size: "60x12" %>
    </div>
    <div class="form-group">
      <label for="recipe[main_image]">Image</label>
      <%= f.text_field :main_image %>
    </div>
    <div class="form-group">
      <label for="recipe[number_people]">Number of people</label>
      <%= f.text_field :number_people %>
    </div>
    <div class="form-group">
      <label for="recipe[minutes]">Minutes</label>
      <%= f.text_field :minutes %>
    </div>
    <div class="form-group">
      <label for="recipe[link]">Link</label>
      <%= f.text_field :link %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Recipe" %>
    </div>

<% end %>